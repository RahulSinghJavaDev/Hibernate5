<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.otmm.entities">
	<class name="Load" table="LOAD">
		<id name="loadNo" column="LOAD_NO">
			<generator class="increment"/>
		</id>
		<property name="owner" column="OWNER"/>
		<property name="description" column="DESCR"/>
		<property name="weight" column="WEIGHT"/>
		<property name="shippingDate" column="SHIPPING_DT"/>
	</class>
</hibernate-mapping>