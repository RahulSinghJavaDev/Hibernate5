<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ip.entities" >
	<class name="ITCCosmeticsProduct" table="ITC_COSMETICS_PRODUCT">
		<id name="productId" column="PRODUCT_ID">
			<generator class="increment"/>		
		</id>
		<property name="productName" column="PRODUCT_NM"/>
		<property name="manufacturedDate" column="MFG_DATE"/>
		<property name="price" column="MRP"/>
		<property name="weight" column="WEIGHT"/>
		<property name="expiryDate" column="EXP_DATE"/>
		<property name="about" column="ABOUT"/>
	</class>
</hibernate-mapping>