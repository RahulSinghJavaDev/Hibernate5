<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.otomo.entities">
	<class name="DigitalCard" table="DIGITALCARD">
		<id name="cardNo" column="CARD_NO">
				<generator class="increment"/>		
		</id>
		<property name="provider" column="PROVIDER"/>
		<property name="suscriberName" column="SUSCRIBER_NAME"/>
		<property name="purchaseDate" column="PURCHASE_DATE"/>
</class>
</hibernate-mapping>